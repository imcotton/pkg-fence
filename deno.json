{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@imcotton/pkg-fence",
  "version": "0.4.3",
  "description": "A command line tool that glance over package lockfile.",
  "license": "AGPL-3.0-only",
  "imports": {
    "@nolyfill/": "https://esm.sh/gh/SukkaW/nolyfill@1.0.34/",
    "@std/testing": "jsr:@std/testing@^0.225.3",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "exports": {
    "./presets": "./src/presets/index.ts",
    "./scanner": "./src/scanner/index.ts",
    "./collect": "./src/collect.ts",
    "./main": "./src/cli/main.ts",
    ".": "./src/cli/bin.ts"
  },
  "tasks": {
    "sync-nolyfill": "./tools/sync/nolyfill.ts",
    "build-npm": "mkdir -p dist/cli && ./tools/build-npm.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 4,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": true,
    "include": [
      "./src"
    ]
  },
  "lock": false,
  "publish": {
    "include": [
      "./src",
      "./LICENSE.txt",
      "./README.md",
      "./deno.json"
    ]
  }
}
